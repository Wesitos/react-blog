{
  "reactApp": {
    "src": "./src/app/",
    "extname": "jsx",
    "build": "./build/static/js/",
    "watch": "./src/**/*.?(js|jsx)"
  },
  "styles": {
    "css":{
      "src": "./src/styles/",
      "extname": "css"
    },
    "sass": {
      "src": "./src/styles/",
      "extname": "scss"
    },
    "build": "./build/static/css/"
  },
  "script": {
    "src": "./src/js",
    "build": "./build/static/js/"
  },
  "data": {
    "src": "./data/",
    "build": "./build/json/",
    "extname": "json"
  },
  "blog":{
    "autor": {
      "src": "./data/**/autor.json",
      "build": "./build/autor/index.json"
    },
    "post":{
      "src": "./data/*/posts/**/*.md",
      "build": "./build/",
      "buildGlob": "./build/*/*/*/*/*.json"
    }
  },
  "vendor": {
    "require": [
      "react",
      "react-dom",
      "lodash",
      "marked",
      "highlight.js"
    ],
    "build": {
      "dirname": "./build/static/js/",
      "name": "vendor.js"
    }
  }
}
